<h2>Details for booking</h2>

<%= form_with model: [@organizer, @tour, @collaborate], url: organizer_tour_hotel_collaborates_path(@organizer, @tour, @hotel) do |f| %>

  <% if f.object.errors.any? %>
  <%= f.object.errors.full_messages.each do |msg| %>
     <%= msg %>
     <% end %>
  <% end %>  

<div>
	<%= f.label :no_of_rooms %>
	<%= f.number_field :no_of_rooms %>
</div>
<%= f.hidden_field :tour_id %>
<br>
<div>
	<%= f.label :room_type %>
	<%= f.select :room_type, Collaborate.room_types.keys.map{|room_type| [room_type.humanize,room_type]}%>
</div>
<br>
<div>
	<%= f.label :check_in%>
	<%= f.date_field :check_in%>
</div>
<br>
<div>
	<%= f.label :check_out%>
	<%= f.date_field :check_out%>
</div>
<div><%= f.submit 'Booking Comfirmation'%></div>
<% end %>