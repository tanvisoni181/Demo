<%= form_tag payments_path do %>
  <label class="amount">
      <span>Amount: @booking.tour.amount</span>
  </label>

  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.secrets.stripe_publishable_key, %>"
    data-description="Go Travel"
    data-amount="<%= @booking.tour.amount%>"
    data-locale="auto">
  </script>
<% end %>