<h2>List of Hotels for Organizer <%= current_user.organizer.id %></h2>
<table>
	<thead>
		<th>Hotel Name</th>
		<th>City</th>
		<th>Booking</th>
	</thead>
	<tbody>
		<% @hotels.each do |hotel| %>
		<tr>
			
			<td><%= hotel.hotel_name%></td>
			<td><%= hotel.city %></td>
			<td><%= link_to 'Book here', new_organizer_tour_hotel_collaborate_path(hotel_id: hotel.id) %></td>
       <% end %>
       </tr>
</tbody>
</table>