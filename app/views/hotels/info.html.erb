<h3>List of hotel registered by <%= current_user.email%></h3>
 <table>
 	<thead>
 		<th>Hotel Name</th>
 		<th>City</th>
 		<th>Action</th>
 	</thead>
 	<tbody>
 		<% @partner.hotels.each do |hotel|%>
 		<tr> 
 			<td><%= hotel.hotel_name %></td>
 			<td><%= hotel.city %></td>
 			<td><%= link_to 'Remove',destroy_hotel_path(hotel), method: :delete, data: { confirm:'Are you sure? '} %></td>
 		</tr>
 		<% end %>
 	</tbody>
 </table>
 <button><%= link_to 'Back', root_path %></button>
